#%Module1.0######################################################################
#
# Connect modulefile
#

proc ModulesHelp { } {
puts stderr "This modulefile defines the library paths and"
puts stderr "include paths needed to use BOSCO to submit jobs on OSG Connect."
}

set is_module_rm [module-info mode remove]

# set up environment 

set version 1.0
set HOME /home/antonyu ; # change to /software later
set bosco_dir $HOME/bosco_copy ; # change to $HOME/bosco/1.0 later
set config_dir ~/.bosco
set config_fl $config_dir/condor_config
set script_fl $bosco_dir/test.sh

prepend-path PATH       $bosco_dir/sbin
prepend-path PATH       $bosco_dir/bin
prepend-path LD_LIBRARY_PATH  $bosco_dir/lib
prepend-path MANPATH      $bosco_dir/man

setenv CONDOR_CONFIG $config_fl

exec $script_fl