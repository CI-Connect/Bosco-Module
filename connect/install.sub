status ... connect command
copyfiles . "$base/."
gitver=$(git describe --abbrev=6 --dirty --always --tags)
sed -e "s/@@version@@/$gitver/" \
	< lib/connect/extensions/client.py \
	> ${base}/lib/connect/extensions/client.py

status "... paramiko (for connect command)"
pip install \
	-b /tmp/pip-build-$USER \
	--target="$base" \
	paramiko
rm -rf /tmp/pip-build-$USER
